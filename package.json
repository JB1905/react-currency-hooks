{
  "name": "react-currency-hooks",
  "version": "1.0.0",
  "description": "Currency converter React hook",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-currency-hooks.cjs.js",
  "module": "lib/react-currency-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-currency-hooks.git"
  },
  "keywords": [
    "currency",
    "hooks",
    "React",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-currency-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-currency-hooks#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@types/react": "^16.9.18",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
